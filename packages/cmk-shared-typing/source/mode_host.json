{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "mode_host",
    "properties": {
        "form_keys": { "$ref": "#/$defs/mode_host_form_keys" },
        "sites": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/mode_host_site"
            }
        },
        "i18n_ping_host": { "$ref": "#/$defs/i18n_ping_host" },
        "i18n_agent_connection": { "$ref": "#/$defs/i18n_agent_connection" },
        "url": { "type": "string" },
        "host_name": { "type": "string" }
    },
    "required": [
        "form_keys",
        "sites",
        "i18n_ping_host",
        "i18n_agent_connection",
        "url",
        "host_name"
    ],
    "$defs": {
        "i18n_ping_host": {
            "type": "object",
            "properties": {
                "loading": { "type": "string" },
                "error_host_not_dns_resolvable": { "type": "string" },
                "success_host_dns_resolvable": { "type": "string" },
                "error_ip_not_pingable": { "type": "string" },
                "success_ip_pingable": { "type": "string" }
            },
            "required": [
                "loading",
                "error_host_not_dns_resolvable",
                "success_host_dns_resolvable",
                "error_ip_not_pingable",
                "success_ip_pingable"
            ]
        },
        "i18n_agent_connection": {
            "type": "object",
            "properties": {
                "dialog_message": {
                    "type": "string"
                },
                "slide_in_title": {
                    "type": "string"
                },
                "msg_start": {
                    "type": "string"
                },
                "msg_success": {
                    "type": "string"
                },
                "msg_loading": {
                    "type": "string"
                },
                "msg_missing": {
                    "type": "string"
                },
                "msg_error": {
                    "type": "string"
                }
            },
            "required": [
                "dialog_message",
                "slide_in_title",
                "msg_start",
                "msg_success",
                "msg_loading",
                "msg_missing",
                "msg_error"
            ]
        },
        "mode_host_form_keys": {
            "type": "object",
            "properties": {
                "form": { "type": "string" },
                "host_name": { "type": "string" },
                "ipv4_address": { "type": "string" },
                "ipv6_address": { "type": "string" },
                "site": { "type": "string" },
                "ip_address_family": { "type": "string" },
                "tag_agent": { "type": "string" },
                "cb_change": { "type": "string" }
            },
            "required": [
                "form",
                "host_name",
                "ipv4_address",
                "ipv6_address",
                "site",
                "ip_address_family",
                "tag_agent",
                "cb_change"
            ]
        },
        "mode_host_site": {
            "type": "object",
            "properties": {
                "id_hash": { "type": "string" },
                "site_id": { "type": "string" }
            },
            "required": ["id_hash", "site_id"]
        }
    }
}
